<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.davidnyangi.ccbrt.PersonDetail"
    tools:showIn="@layout/activity_person_detail"
    android:layout_marginRight="10dp"
    android:layout_gravity="fill_vertical"
    android:layout_marginTop="-60dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="10dp"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="1dp"
            app:elevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTACT INFO"
                    android:textColor="@color/colorAccent"
                    style="@style/TextAppearance.AppCompat.Inverse"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_email_black"
                    android:tint="@color/colorPrimary"
                    android:id="@+id/email_icon"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true" />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Email"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:textSize="18dp"
                    android:textColor="@color/colorTextContent"
                    android:layout_alignTop="@+id/email_icon"
                    android:layout_toEndOf="@+id/email_icon" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_link_black"
                    android:tint="@color/colorPrimary"
                    android:id="@+id/link_icon"
                    android:layout_below="@+id/email"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="www.link.com"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/colorTextContent"
                    android:layout_alignTop="@+id/link_icon"
                    android:layout_toEndOf="@+id/link_icon" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:elevation="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/data">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WHAT I DO"
                    android:textColor="@color/colorAccent"
                    style="@style/TextAppearance.AppCompat.Inverse"
                    android:id="@+id/about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lorem_text"
                    android:layout_below="@+id/about"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/textView4" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
