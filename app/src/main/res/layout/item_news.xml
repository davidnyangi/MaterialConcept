<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/news_card"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@+id/event_card"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="12sp"
                android:text="NOTICIA"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorPrimary"
                android:id="@+id/type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.StatusBar.EventContent"
                android:text="Este es el Smart ForTwo mÃ¡s poderoso en el mundo"
                android:layout_below="@+id/type"
                android:textColor="@color/colorTextContent"
                android:id="@+id/title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:ellipsize="end"
                android:layout_toStartOf="@+id/image"
                android:maxLines="2" />

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/smart"
                android:layout_alignParentEnd="true"
                android:scaleType="centerCrop"
                android:id="@+id/image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viernes, 15 de Abril 2016"
                android:paddingBottom="4dp"
                android:layout_below="@+id/title"
                android:layout_alignStart="@+id/title"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>