<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#dedede"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/logo"
        android:tint="@color/colorPrimary"
        android:id="@+id/link_icond" />
    <android.support.v7.widget.CardView
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        app:cardCornerRadius="2dp"
        app:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONTACT INFO"
                android:textColor="@color/colorPrimary"
                style="@style/TextAppearance.AppCompat.Inverse"
                android:id="@+id/textView3" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_email_black"
                android:tint="@color/colorPrimary"
                android:id="@+id/email_icon"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/textView3" />


            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="info@ccbrt.org"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:textSize="18dp"
                android:textColor="@color/colorTextContent"
                android:layout_alignTop="@+id/email_icon"
                android:layout_toEndOf="@+id/email_icon"
                android:layout_toRightOf="@+id/email_icon"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_link_black"
                android:tint="@color/colorPrimary"
                android:id="@+id/link_icon"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="www.ccbrt.or.tz"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/colorTextContent"
                android:layout_alignTop="@+id/link_icon"
                android:layout_toEndOf="@+id/link_icon"
                android:layout_toRightOf="@+id/link_icon"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>